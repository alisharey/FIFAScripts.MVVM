                      <materialDesign:PackIcon Kind="Minus" />
                    </Button>


                  </StackPanel>
                </Grid>
              </DataTemplate>
            </GroupBox.HeaderTemplate>
            <StackPanel>
              <materialDesign:Card Padding="4">
                <StackPanel>
                  <TextBox IsReadOnly="True"
                           Background="Transparent"
                           BorderThickness="0"
                           IsEnabled="True" FontSize="15"
                             FontWeight="ExtraBold"
                             Margin="0 0 0 2"
                             Text="{Binding Averages.Dribbling}"
                             HorizontalAlignment="Center" />
                  <ProgressBar Maximum="100"
                               Value="{Binding Averages.Dribbling}"
                               Height="10" />
                </StackPanel>
              </materialDesign:Card>
              <Grid Margin="0 8 0 0">
                <TextBlock Text="Agility"
                           HorizontalAlignment="Left">

                </TextBlock>
                <xctk:IntegerUpDown x:Name="agility"
                                    Text="{Binding CurrentPlayerStatsToValue[agility], UpdateSourceTrigger=PropertyChanged}" />


              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=agility}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
                <TextBlock Text="Balance"
                           HorizontalAlignment="Left">

                </TextBlock>
                <xctk:IntegerUpDown x:Name="balance"
                                    Text="{Binding CurrentPlayerStatsToValue[balance], UpdateSourceTrigger=PropertyChanged}" />


              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=balance}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
                <TextBlock Text="Reactions"
