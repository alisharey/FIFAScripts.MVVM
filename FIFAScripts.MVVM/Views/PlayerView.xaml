              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=longpassing}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
