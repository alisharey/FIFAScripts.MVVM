                </TextBlock>
                <xctk:IntegerUpDown x:Name="ballcontrol"
                                    Text="{Binding CurrentPlayerStatsToValue[ballcontrol], UpdateSourceTrigger=PropertyChanged}" />


              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=ballcontrol}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
                <TextBlock Text="Dribbling"
                           HorizontalAlignment="Left">

                </TextBlock>
                <xctk:IntegerUpDown x:Name="dribbling"
