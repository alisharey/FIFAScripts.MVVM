                            CommandParameter="{Binding Name, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}}">
                      <materialDesign:PackIcon Kind="Plus" />
                    </Button>
                    <Button materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0"
                            Style="{StaticResource MaterialDesignToolWindowButtonStyle}"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            Background="{DynamicResource PrimaryHueDarkBrush}"
                            Command="{Binding DataContext.DecrementButtonClickCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=GroupBox}}"
                            CommandParameter="{Binding Name, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}}">
                      <materialDesign:PackIcon Kind="Minus" />
                    </Button>


                  </StackPanel>
                </Grid>
              </DataTemplate>
            </GroupBox.HeaderTemplate>


            <StackPanel>
              <materialDesign:Card Padding="4">
                <StackPanel>
                  <TextBox IsReadOnly="True"
                           Background="Transparent"
                           BorderThickness="0"
                           IsEnabled="True" FontSize="15"
                             FontWeight="ExtraBold"
                             Margin="0 0 0 2"
                             Text="{Binding Averages.Passing}"
                             HorizontalAlignment="Center" />
                  <ProgressBar Maximum="100"
                               Value="{Binding Averages.Passing}"
                               Height="10" />
                </StackPanel>
              </materialDesign:Card>

              <Grid Margin="0 8 0 0">
                <TextBlock Text="Vision"
                           HorizontalAlignment="Left">

                </TextBlock>
                <xctk:IntegerUpDown  x:Name="vision"
                                     Text="{Binding CurrentPlayerStatsToValue[vision], UpdateSourceTrigger=PropertyChanged}" />


              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
