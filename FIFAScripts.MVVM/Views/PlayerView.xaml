                <xctk:IntegerUpDown x:Name="composure"
                                    Text="{Binding CurrentPlayerStatsToValue[composure], UpdateSourceTrigger=PropertyChanged}" />


              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=composure}"
                           Height="7" />

            </StackPanel>

          </GroupBox>



        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="15,0,0,15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">

          <GroupBox x:Name="Defending"
                    Header="DEFENDING"
                    Margin="0,0,0,0">
            <GroupBox.HeaderTemplate>
              <DataTemplate>
                <Grid>
                  <TextBlock Margin="8,0,0,0"
                             VerticalAlignment="Center"
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                             Text="{Binding Header, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}}"
                             HorizontalAlignment="Left" />
                  <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Right">
                    <Button materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0"
                            Style="{StaticResource MaterialDesignToolWindowButtonStyle}"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            Background="{DynamicResource PrimaryHueDarkBrush}"
