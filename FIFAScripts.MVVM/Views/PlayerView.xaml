                </TextBlock>
                <xctk:IntegerUpDown x:Name="shotpower"
                                    Text="{Binding CurrentPlayerStatsToValue[shotpower], UpdateSourceTrigger=PropertyChanged}" />
              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=shotpower}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
