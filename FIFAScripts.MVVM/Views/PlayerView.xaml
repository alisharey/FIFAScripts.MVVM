              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=crossing}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
                <TextBlock Text="Free Kick Accuracy"
                           HorizontalAlignment="Left">

                </TextBlock>
                <xctk:IntegerUpDown x:Name="freekickaccuracy"
                                    Text="{Binding CurrentPlayerStatsToValue[freekickaccuracy], UpdateSourceTrigger=PropertyChanged}" />


              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=freekickaccuracy}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
                <TextBlock Text="Short Passing"
                           HorizontalAlignment="Left">

                </TextBlock>
                <xctk:IntegerUpDown   x:Name="shortpassing"
                                      Text="{Binding CurrentPlayerStatsToValue[shortpassing], UpdateSourceTrigger=PropertyChanged}" />


              </Grid>
              <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True"
                           Value="{Binding Text, Mode=OneWay, ElementName=shortpassing}"
                           Height="7" />

              <Grid Margin="0 8 0 0">
