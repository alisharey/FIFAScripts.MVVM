                            Command="{Binding DataContext.DecrementButtonClickCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=GroupBox}}"
                            CommandParameter="{Binding Name, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}}">
                      <materialDesign:PackIcon Kind="Minus" />
